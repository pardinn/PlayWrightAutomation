{
  "name": "playwright-automation",
  "version": "1.1.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "regression": "npx playwright test",
    "web-tests": "npx playwright test --grep @Web",
    "api-ests": "npx playwright test --grep @API",
    "failed-tests": "npx playwright test --last-failed",
    "flakyness-check": "npx playwright test --repeat-each 10 --workers 6",
    "safari-custom-config": "npx playwright test --config playwright.config1.js --project=safari",
    "cucumber-regression": "npx cucumber-js --tags '@Regression' --retry 1 --exit --format html:cucumber-report.html",
    "prepare": "husky",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix"
  },
  "keywords": [],
  "author": "Victor Moraes",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cucumber/cucumber": "^12.2.0",
    "@eslint/js": "^9.38.0",
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "exceljs": "^4.4.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier-plugin-gherkin": "^3.1.3",
    "typescript-eslint": "^7.16.0"
  }
}
